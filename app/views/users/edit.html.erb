<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= @user.errors.count %>errors prohibited this book from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  </div>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
          <%= form_with model: @user, local: true do |f| %>
            <%= f.label :name,"Name", class: "label" %>
             <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName" %>
            <%= f.label :profile_image,"Image", class: "label" %>
              <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "w-100" %>
            <%= f.label :introduction,"Introduction", class: "label" %>
              <%= f.text_area :introduction, class:"form-control", rows:"3" %>
            <%= f.submit "UPDATE", class:"btn btn-lg btn-block btn-info mt-5" %>
          <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
    </div>
  </div>
</div>