<div class="container">
  <h2>User info</h2>
  <%= form_with model: @user, local: true do |f| %>

    <%= f.label :name,"Name", class: "label" %>
     <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName", placeholder:"名前" %>

    <%= f.label :profile_image,"Image", class: "label" %>
      <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "w-100" %>

    <%= f.label :introduction,"紹介文", class: "label" %>
      <%= f.text_area :introduction, class:"form-control", rows:"3", placeholder:"コメントここに" %>

    <%= f.submit "UPDATE", class:"btn btn-lg btn-block btn-info mt-5" %>
  <% end %>
</div>