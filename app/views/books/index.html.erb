<div>
    <% if flash[:notice] %>
      <p id="notice">
        <%= flash[:notice]  %>
      </p>
    <% end %>
<%= render 'books/errors', book: @book_new %>

</div>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/info', user: @user %>
      <%= render 'books/newbook', book: @book_new %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <thead>
            <% @books.each do |book| %>
              <tr>
                <td><%= attachment_image_tag book.user, :profile_image, fallback: "no-image.png", size:"40x40", class:"bd-placeholder-img align-self-center mx-3"%></td>
                <td><%=link_to book.title,book_path(book) %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </thead>
        </table>
    </div>
  </div>
</div>