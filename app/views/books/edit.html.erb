<%= render 'books/errors', book: @book %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
        <%= form_with model: @book, local: true do |f| %>
          <div class="form-group">
            <%= f.label :title,"title", class: "label" %>
            <%= f.text_field :title, autofocus: true, class:"form-control", id:"inputName", placeholder:"タイトル" %>
          </div>
          <div class="form-group">
            <%= f.label :body,"opnion", class: "label" %>
            <%= f.text_area :body, autofocus: true, class:"form-control bookbody", id:"book_body", placeholder:"body" %>
          </div>
          <div class="form-group">
            <%= f.submit "Update Book", class:"btn btn-success" %>
          </div>
        <% end %>
      <%= link_to "Show", book_path(@book) %>
      |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>