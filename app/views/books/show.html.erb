<%= @book.user.name %>
<%= @book.user.introduction %>
<%= attachment_image_tag @book.user, :profile_image, :fill, 80, 80 ,fallback: "no-image.png" %>


<h1>ブックの詳細ページ</h1>
<%= link_to user_path(@book.user) do %>
<%= @book.user.name %>
<% end %>
<%= @book.title %>
<%=  simple_format @book.body %>

<% if @book.user_id == current_user.id %>
<%= link_to "編集", edit_book_path(@book) %>
<%= link_to "Destroy", book_path(@book), method: :delete, 'data-confirm' => "Are you sure?"  %>
<% end %>

